@inherits BunitContext

<h3>Given a StartButton</h3>

@code {
	[Fact]
	public void WhenClickingApplyButton_ThenNavigatesToStart(){
		// Arrange
		Services.AddLocalization();
		var navMan = Services.GetRequiredService<NavigationManager>();
		var dashboard = Render<Web.Pages.Authority.Dashboard>();
		var applyButton = dashboard.FindByDataTestId("apply-button");

		// Act
		applyButton.Click();

		// Assert
		Assert.EndsWith("/authority/partnership-application/initiate/start", navMan.Uri);
	}
}
