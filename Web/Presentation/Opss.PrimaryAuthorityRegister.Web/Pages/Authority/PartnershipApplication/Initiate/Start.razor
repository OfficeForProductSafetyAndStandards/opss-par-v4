@page "/authority/partnership-application/initiate/start"

@inject IStringLocalizer<Start> Loc
@inject NavigationManager NavManager

<PageTitle>@Loc["PageTitle"]</PageTitle>

<GdsHeading HeadingLevel="1" Classes=@HeadingSize.Large>
	@Loc["PageHeading"]
</GdsHeading>

<GdsButton Id="start-button" 
		   IsStartButton=@true 
		   @onclick=OnStartClick>
	@Loc["Start_Button_Text"]
</GdsButton>

@code {
	private void OnStartClick(MouseEventArgs e)
	{
		NavManager.NavigateTo("/authority/partnership-application/initiate/confirm");
	}
}
