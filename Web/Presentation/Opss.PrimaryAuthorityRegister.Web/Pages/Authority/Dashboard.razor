@page "/authority/"
@attribute [Authorize(Policy = IdentityConstants.Policies.Authority)]

@inject IStringLocalizer<Dashboard> Loc
@inject NavigationManager NavManager

<PageTitle>@Loc["PageTitle"]</PageTitle>

<GdsHeading DataTestId="page-heading" HeadingLevel="1" Classes=@HeadingSize.Large>
	@Loc["PageHeading"]
</GdsHeading>

<GdsButton Id="apply-button"
		   DataTestId="apply-button"
		   @onclick=OnPartnershipApplicationClick
		   Classes=@ButtonStyle.Secondary>
	@Loc["ApplyButton"]
</GdsButton>

@code {
	private void OnPartnershipApplicationClick(MouseEventArgs e)
	{
		NavManager.NavigateTo("/authority/partnership-application/initiate/start");
	}
}